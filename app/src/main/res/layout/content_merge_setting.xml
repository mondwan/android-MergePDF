<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_merge_setting"
    android:minHeight="@dimen/list_item_height"
    android:paddingTop="@dimen/list_item_padding_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.practical_developer.mergepdf.MergeSettingActivity"
    tools:showIn="@layout/activity_merge_setting">

    <TextView
        android:text="@string/file_name"
        android:layout_width="@dimen/list_icon_width"
        android:layout_height="wrap_content"
        android:id="@+id/file_name_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/file_name"
        android:layout_alignBottom="@+id/file_name"
        android:layout_marginStart="@dimen/list_icon_margin_left"
        android:layout_marginLeft="@dimen/list_icon_margin_left"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/file_name_hint"
        android:ems="10"
        android:id="@+id/file_name"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toEndOf="@+id/file_name_label"
        android:layout_toRightOf="@+id/file_name_label"
        android:layout_marginStart="@dimen/list_content_margin_left"
        android:layout_marginLeft="@dimen/list_content_margin_left"
        android:layout_marginEnd="@dimen/list_content_margin_right"
        android:layout_marginRight="@dimen/list_content_margin_right"
        />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.practical_developer.mergepdf.FileListFragment"
        android:id="@+id/fragment"
        android:layout_below="@+id/file_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
