<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_merge_setting"
    android:paddingTop="@dimen/list_item_padding_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.practical_developer.mergepdf.MergeSettingActivity"
    tools:showIn="@layout/activity_merge_setting">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginLeft="@dimen/text_field_margin_left"
        android:layout_marginStart="@dimen/text_field_margin_left"
        android:layout_marginRight="@dimen/list_right_icon_margin_right"
        android:layout_marginEnd="@dimen/list_right_icon_margin_right"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/file_name"
            android:hint="@string/file_name"/>

    </android.support.design.widget.TextInputLayout>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.practical_developer.mergepdf.FileListFragment"
        android:id="@+id/fragment"
        android:layout_weight="1"
        />

</LinearLayout>
